{
  "name": "web3-Kickstarter",
  "version": "1.0.0",
  "description": "Decentralized crowdfunding platform",
  "main": "index.js",
  "scripts": {
    "chain:local:start": "anvil -p 8545 --chain-id 31337",
    "chain:local:start:ws": "anvil -p 8545 --chain-id 31337 --ws",

    "contracts:build": "pnpm --filter @packages/contracts exec forge build",
    "contracts:deploy:local": "bash scripts/deploy-contracts-local.sh",
    "contracts:deploy:sepolia": "bash scripts/deploy-sepolia.sh",

    "indexer:dev:local": "dotenv -e apps/indexer/.env.local -- pnpm --filter @apps/indexer dev",
    "indexer:dev:sepolia": "dotenv -e apps/indexer/.env.sepolia -- pnpm --filter @apps/indexer dev",
    "indexer:deploy:flyio": "bash scripts/deploy-indexer.sh",

    "api:dev:local": "dotenv -e apps/api/.env.local -- pnpm --filter @apps/api dev",
    "api:dev:sepolia": "dotenv -e apps/api/.env.sepolia -- pnpm --filter @apps/api dev",

    "edge:dev:local": "pnpm --filter @apps/edge dev",
    "edge:deploy:cloudflare": "pnpm --filter @apps/edge run deploy",
    "edge:kv:create": "pnpm --filter @apps/edge kv:create",
    "edge:kv:create:preview": "pnpm --filter @apps/edge kv:create:preview",

    "web:dev:local": "pnpm --filter @apps/web dev",

    "dev:local": "bash scripts/dev-local.sh",
    "dev:local:ui": "concurrently -k -n edge,web -c blue,green \"pnpm edge:dev:local\" \"pnpm web:dev:local\"",
    "dev:local:full": "bash scripts/dev-local.sh --full",

    "dev:sepolia": "concurrently -k -n indexer,api -c magenta,yellow \"pnpm indexer:dev:sepolia\" \"pnpm api:dev:sepolia\"",

    "prepare": "husky install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json,sol}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/sensible": "^6.0.3",
    "fastify-plugin": "^5.1.0"
  }
}
